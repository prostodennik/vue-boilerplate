.skills-row {
  @include tablets {
    display: flex;
    flex-direction: column;
    align-items: center;
  }
}

.skills-row__title {
  margin-bottom: 26px;
  font-size: 24px;
  font-weight: 700;

  @include tablets {
    margin-bottom: 24px;
  }
}

.skills-row__list {
  display: flex;
  margin-left: -4%;
  flex-wrap: wrap;

  @include tablets {    
    margin-left: 0;
    justify-content: center;
    width: 100%
  }
}

.skills-row__item {
  margin-left: 4%;
}